<Window x:Class="a7DocumentDbStudio.Dialogs.ChangeValue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:a7DocumentDbStudio.Dialogs"
        mc:Ignorable="d"
        Title="Change Value" Height="135" Width="400">
    <DockPanel>
        <StackPanel Height="30" Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button Click="bCancel_Click" x:Name="bCancel" Width="70" Margin="5">Cancel</Button>
            <Button Click="bOk_Click" x:Name="bOk" Width="70" Margin="5">OK</Button>
        </StackPanel>
        <DockPanel Margin="5">
            <TextBox x:Name="tbValue" Margin="5" DockPanel.Dock="Bottom"></TextBox>
            <Grid>
                <TextBlock Margin="5" VerticalAlignment="Bottom"> New value:</TextBlock>
            </Grid>
        </DockPanel>
    </DockPanel>
</Window>
